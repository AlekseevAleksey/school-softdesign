<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <TextView
            android:id="@+id/user_name_list"
            style="@style/font_medium"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="@dimen/padding"
            android:text="@string/app_name"/>


        <TextView
            android:id="@+id/user_team_list"
            style="@style/font_regular"
            android:text="name team"
            android:layout_below="@+id/user_name_list"
            android:layout_alignLeft="@+id/user_name_list"
            android:layout_alignStart="@+id/user_name_list" />

    </RelativeLayout>
